sign := *top* & 
[ HEAD pos,
  SPR *list*,
  COMPS *list*].

pos := *top* & [ MOD *list* ].

verb := pos & [ MOD <> ].
det := pos & [ MOD <> ].
adv := pos & [ MOD < [ HEAD verb ] > ].
adj := pos & [ MOD < [ HEAD noun ] > ].

noun := comp.
prep := comp.

comp := pos & [ MOD <> ].

phrase := sign & [  ARGS *list* ].

word := sign &
[ ORTH string ].

;;;;;;;;;;;;;;;;;;;;;;;

string := *top*.

*list* := *top*.

*ne-list* := *list* &
 [ FIRST *top*,
   REST *list* ].

*null* := *list*.


