head-complement-rule-1-1 := phrase &
[ HEAD #0,
  SPR #a, 
  COMPS < #2 >,   

  ARGS < sign & 
         [ HEAD #0,
           SPR #a, 
           COMPS < #1, #2 & [ SPR < > ] > ],  #1 >  ].

head-specifier-rule := phrase &
[ HEAD #0,
  SPR < >,
  COMPS #a,
  ARGS < phrase & 
         #1 & [ SPR < > ],   phrase & 
                             [ HEAD #0,
                               SPR < #1 >,
                               COMPS #a ] > ].

 
head-modifier-rule := phrase &
[ HEAD verb,
  SPR #spr,
  COMPS #comps,
  ARGS < sign & #hdtr &
         [ SPR #spr,
           COMPS #comps ],
         sign & 
         [HEAD [MOD < #hdtr > ]] > ].

